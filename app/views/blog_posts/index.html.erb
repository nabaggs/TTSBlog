<div class="container">
<h1><b>Current Blog Posts</b></h1>
	<div class="row">
		<%@blog_posts.each do |blog_post|%>
			<div class="col-md-7">
				<div class="panel panel-default">
					<div class="panel-heading">
						<%=link_to blog_post.title,blog_post%>
					</div>
					<div class="panel-body">
						by <%=blog_post.author%><br>
						<p>Created at: <%=blog_post.created_at.strftime("%m/%d/%y at %I:%M:%p")%></p>
						<p><%= blog_post.blogEntry%></p>
					</div>
					<div class="panel-footer">
						<%=link_to"Edit",edit_blog_post_path(blog_post),class:"btn btn-warning"%>
						<%=link_to"Delete",blog_post,class:"btn btn-danger"%>
					</div>
				</div>
			</div>
		<%end%>
	</div>
	<br>
	<%=link_to"Create Blog Post",new_blog_post_path,class:"btn btn-primary"%>
</div>
